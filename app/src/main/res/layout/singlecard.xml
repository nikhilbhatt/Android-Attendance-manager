<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="2dp"
    android:background="#DCDCDC">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >

       <TextView
           android:id="@+id/subject"
           android:maxLength="14"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_marginStart="0dp"
           android:text="Subject Name"
           android:textSize="27sp" />
       <TextView
           android:id="@+id/percentage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="40%"
           android:textSize="27sp"
           android:layout_marginLeft="3dp"
           android:layout_toRightOf="@+id/subject"
           />
       <TextView
           android:id="@+id/present"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Present:"
           android:layout_below="@+id/subject"
           android:textSize="24sp"/>
       <TextView
           android:id="@+id/noofpresent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="12"
           android:textSize="24sp"
           android:layout_below="@+id/subject"
           android:layout_toRightOf="@id/present"/>
       <TextView
           android:id="@+id/absent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="24sp"
           android:text="Absent:"
           android:layout_below="@+id/subject"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@id/noofpresent"/>
       <TextView
           android:id="@+id/noofabsent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/absent"
           android:layout_below="@+id/subject"
           android:text="10"
           android:textSize="24dp"/>
       <TextView
           android:id="@+id/canbunk"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="19sp"
           android:text="can bunk x lectures"
           android:layout_below="@id/present"/>
       <ImageButton
           android:id="@+id/add"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/add"
           android:layout_toLeftOf="@+id/subtract"/>
       <ImageButton
           android:id="@+id/subtract"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/absent"
           android:layout_alignParentEnd="true"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="24sp"
           android:text="Aim:"
           android:layout_marginLeft="10sp"
           android:id="@+id/textaim"
           android:layout_toRightOf="@+id/noofabsent"
           android:layout_below="@+id/subject"
           />
       <TextView
           android:id="@+id/aim"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="24sp"
           android:layout_below="@+id/subject"
           android:text="75"
           android:layout_toRightOf="@+id/textaim"/>
       <TextView
           android:id="@+id/date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Current Date"
           android:textSize="15sp"
           android:layout_below="@+id/canbunk"
           />
   </RelativeLayout>
</android.support.v7.widget.CardView>